<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".4"
        android:scaleType="centerCrop"
        android:src="@drawable/qw"
        android:tint="@color/tint_black" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:paddingTop="15dp">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Mobile Number"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />


                <EditText
                    android:id="@+id/ed_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:inputType="phone"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Address"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:singleLine="false"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Street Address"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_streetaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:singleLine="false"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="City"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:singleLine="false"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Pincode"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="LandMark"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:singleLine="false"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="State"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/rect_grayoutline"

                    android:layout_height="50dp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:spinnerMode="dialog"
                        android:prompt="@string/hint_resource"


                        android:id="@+id/ed_state"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"></androidx.appcompat.widget.AppCompatSpinner>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="District"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/rect_grayoutline"

                    android:layout_height="50dp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:spinnerMode="dialog"
                        android:prompt="@string/hint_resource"


                        android:id="@+id/ed_district"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"></androidx.appcompat.widget.AppCompatSpinner>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Zone"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/rect_grayoutline"

                    android:layout_height="50dp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:spinnerMode="dialog"
                        android:prompt="@string/hint_resource"


                        android:id="@+id/ed_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"></androidx.appcompat.widget.AppCompatSpinner>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Username"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:inputType="text"

                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Password"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:passwordToggleEnabled="true"
                    android:layout_height="wrap_content">

                <EditText
                    android:paddingRight="5dp"
                    android:id="@+id/ed_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:inputType="textPassword"

                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Confirm password"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:passwordToggleEnabled="true"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/ed_confirmpwd"
                        android:paddingRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rect_grayoutline"
                        android:fontFamily="sans-serif"
                        android:inputType="textPassword"

                        android:paddingLeft="16.3dp"
                        android:paddingTop="15.7dp"
                        android:paddingBottom="15.7dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/greyText"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="26.3dp"
                android:background="@drawable/rect_loginbtn"
                android:elevation="1dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:paddingTop="15.7dp"
                android:paddingBottom="15.7dp"
                android:text="SIGN UP"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="normal" />

            <!--        <TextView-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_gravity="center_horizontal"-->
            <!--            android:layout_marginTop="20dp"-->
            <!--            android:fontFamily="sans-serif"-->
            <!--            android:gravity="center_horizontal"-->
            <!--            android:text="By clicking “Sign up” I agree to"-->
            <!--            android:textColor="@color/black"-->
            <!--            android:textSize="11.7sp"-->
            <!--            android:textStyle="normal" />-->

            <!--        <TextView-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_gravity="center_horizontal"-->
            <!--            android:fontFamily="sans-serif"-->
            <!--            android:gravity="center_horizontal"-->
            <!--            android:text="Terms and Service."-->
            <!--            android:textColor="@color/black"-->
            <!--            android:textSize="11.7sp"-->
            <!--            android:textStyle="normal" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:text="Already have an account?"
                    android:textColor="@color/black"
                    android:textSize="13.3sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:paddingStart="10dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="15dp"
                    android:text="Sign in"
                    android:textColor="@color/green"
                    android:textSize="13.3sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
</RelativeLayout>