<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".4"
        android:scaleType="centerCrop"
        android:src="@drawable/qw"
        android:tint="@color/tint_black" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">
        <!--        android:background="@drawable/gradient_login"-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="65dp"
            android:text="Consumer Apps"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:visibility="gone" />




    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="190dp"
            android:layout_marginRight="15dp"
            android:background="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="5dp"
                    android:text="Username"
                    android:textColor="#969696"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="40dp"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleEnabled="false">

                        <EditText
                            android:id="@+id/ed_username"
                            android:layout_width="match_parent"

                            android:layout_height="48dp"
                            android:background="@drawable/rect_grayoutline"
                            android:fontFamily="sans-serif"
                            android:inputType="text"
                            android:padding="5dp"
                            android:paddingStart="7dp"
                            android:paddingLeft="16.3dp"
                            android:paddingTop="15.7dp"
                            android:paddingBottom="15.7dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/greyText"
                            android:textSize="15sp"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="19.3dp"
                    android:text="Password"
                    android:textColor="#969696"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="40dp"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleEnabled="true">

                        <EditText
                            android:id="@+id/ed_passwd"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/rect_grayoutline"
                            android:fontFamily="sans-serif"
                            android:inputType="textPassword"
                            android:padding="5dp"
                            android:paddingStart="7dp"
                            android:paddingLeft="16.3dp"
                            android:paddingTop="15.7dp"
                            android:paddingBottom="15.7dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/greyText"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_changepwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="19.3dp"
                    android:text="Forgot Password?"
                    android:textColor="#969696"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="19.3dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/rect_loginbtn"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="LOGIN"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/lin_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="9dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New? "
                        android:textColor="@color/greyText"
                        android:textSize="15.4sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="Sign-up "
                        android:textColor="@color/green_text"
                        android:textSize="15.4sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="for a new account."
                        android:textColor="@color/greyText"
                        android:textSize="15.4sp" />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

