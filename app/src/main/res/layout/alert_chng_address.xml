<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:inputType="text"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Mobile"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:inputType="number"
                    android:maxLength="10"
                    android:editable="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Landmark"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/ed_landmark"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:inputType="text"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26.3dp"
            android:layout_marginRight="26.3dp"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10.3dp"
                android:fontFamily="sans-serif"
                android:padding="5dp"
                android:text="State"
                android:textColor="@color/black"
                android:textSize="11.7sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/rect_grayoutline"

                android:layout_height="50dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:spinnerMode="dialog"
                    android:prompt="@string/hint_state"


                    android:id="@+id/ed_state"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"></androidx.appcompat.widget.AppCompatSpinner>
            </LinearLayout>

        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="District"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/rect_grayoutline"

                    android:layout_height="50dp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:spinnerMode="dialog"
                        android:prompt="@string/hint_district"


                        android:id="@+id/ed_district"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"></androidx.appcompat.widget.AppCompatSpinner>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Zone"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/rect_grayoutline"

                    android:layout_height="50dp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:spinnerMode="dialog"
                        android:prompt="@string/hint_resource"


                        android:id="@+id/ed_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"></androidx.appcompat.widget.AppCompatSpinner>
                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Address"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:inputType="textMultiLine"
                    android:lines="2"

                    android:gravity="top"
                    android:maxLines="10"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Street"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:inputType="text"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="City"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:inputType="text"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="PIN"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:inputType="text"
                    android:maxLength="6"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.3dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/ed_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_grayoutline"
                    android:fontFamily="sans-serif"
                    android:inputType="text"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:paddingBottom="15.7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyText"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>