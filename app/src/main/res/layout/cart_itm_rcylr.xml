<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="8dp"
        android:src="@drawable/dummychicken"
        android:id="@+id/product_image"
        android:layout_width="120dp"
        android:layout_height="110dp">

    </ImageView>


<LinearLayout
    android:layout_toRightOf="@+id/product_image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <ImageView
            android:visibility="gone"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_veg" />

        <TextView
            android:id="@+id/tv_itmname_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            android:text="Item Name"
            android:textColor="@color/textColor"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Rs :"
            android:textColor="@color/textColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_amnt_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:text="0.00"
            android:textColor="@color/textColor"
            android:textSize="14sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/quantity_layt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:elevation="1dp">

            <ImageView
                android:id="@+id/img_cart_minus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#e4e7ea"
                android:src="@drawable/ic_minus" />

            <TextView
                android:id="@+id/tv_count_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:text="1"
                android:textColor="@color/textColor"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/img_cart_add"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#e4e7ea"
                android:src="@drawable/ic_add" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="22dp"
            android:src="@drawable/ic_delete" />
    </RelativeLayout>


</LinearLayout>
    <View
        android:layout_below="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="20dp"
        android:background="#cdd9d9" />

</RelativeLayout>
